{
  "name": "ascstudymonitor-client",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "NODE_ENV=production vue-cli-service build",
    "lint": "vue-cli-service lint",
    "build:dev": "NODE_ENV=development vue-cli-service build",
    "test": "vue-cli-service test:unit",
    "test:watch": "vue-cli-service test:unit --watch"
  },
  "dependencies": {
    "@sentry/browser": "^5.23.0",
    "@sentry/integrations": "^5.23.0",
    "apollo-boost": "^0.4.9",
    "core-js": "^3.6.5",
    "debug": "^4.2.0",
    "graphql": "^15.4.0",
    "qs": "^6.9.4",
    "raf": "^3.4.1",
    "v-body-scroll-lock": "^1.1.3",
    "v-hotkey": "^0.8.0",
    "vue": "^2.6.12",
    "vue-apollo": "^3.0.5",
    "vue-clipboard2": "^0.3.1",
    "vue-js-modal": "^2.0.0-rc.6",
    "vue-router": "^3.4.8",
    "vue-slide-up-down": "^2.0.1",
    "vue-social-sharing": "^3.0.3",
    "vue-toasted": "^1.1.28",
    "vue-typer": "^1.2.0",
    "vue-waypoint": "^3.5.2"
  },
  "devDependencies": {
    "@jagi/jest-transform-graphql": "^1.0.2",
    "@vue/cli-plugin-babel": "^4.5.8",
    "@vue/cli-plugin-eslint": "^4.5.8",
    "@vue/cli-plugin-router": "^4.5.8",
    "@vue/cli-plugin-unit-jest": "^4.5.8",
    "@vue/cli-service": "^4.5.8",
    "@vue/test-utils": "^1.1.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-vue": "^6.2.2",
    "git-rev-sync": "^3.0.0",
    "graphql-tag": "^2.9.0",
    "postcss-assets": "^5.0.0",
    "postcss-nested": "^4.2.3",
    "tailwindcss": "^1.9.6",
    "vue-template-compiler": "^2.6.12",
    "wallaby-vue-compiler": "^1.0.6"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "jest": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "ignoreRestSiblings": true
        }
      ]
    },
    "overrides": [
      {
        "files": [
          "**/__tests__/*.{j,t}s?(x)",
          "**/tests/unit/**/*.spec.{j,t}s?(x)"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "preset": "@vue/cli-plugin-unit-jest",
    "setupFiles": [
      "<rootDir>/jest.init.js"
    ],
    "transform": {
      "\\.(gql|graphql)$": "@jagi/jest-transform-graphql"
    },
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/src/**/*.{js,vue}",
      "!**/node_modules/**",
      "!**/dist/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/membranepotential/ascstudymonitor.git"
  }
}
